<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListResults">


    <ListView
        android:id="@+id/flight_list"
        android:layout_width="366dp"
        android:layout_height="493dp"
        android:layout_marginTop="128dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ListView>

    <TextView
        android:id="@+id/headtext"
        android:layout_width="123dp"
        android:layout_height="38dp"
        android:layout_marginTop="32dp"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/flight_list"
        app:layout_constraintEnd_toStartOf="@+id/headtext2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.504" />

    <TextView
        android:id="@+id/headtext2"
        android:layout_width="123dp"
        android:layout_height="38dp"
        android:layout_marginTop="32dp"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/flight_list"
        app:layout_constraintEnd_toStartOf="@+id/headtext3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.504" />

    <TextView
        android:id="@+id/headtext3"
        android:layout_width="123dp"
        android:layout_height="38dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/flight_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.504" />


</android.support.constraint.ConstraintLayout>

